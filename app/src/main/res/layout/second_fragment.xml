<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">


    <TextView
        android:id="@+id/avg_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Your average statistics"
        android:textSize="25dp"
        android:textColor="#f29d02"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/day_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:text="From total of 0 entries / days"
        android:layout_marginLeft="80dp"
        android:textSize="15dp"
        android:textColor="#9E6703"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/first_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="50dp"
            android:text="1"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#f29d02"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/first_numb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Average Step Count"
                android:textColor="#9ca9bd"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/first_numb_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

                <ImageView
                    android:id="@+id/first_imgview"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_error_outline_black_24dp" />

                <TextView
                    android:id="@+id/first_numb_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/second_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="50dp"
            android:text="2"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#f29d02"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/second_numb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Average Calories Burnt"
                android:textColor="#9ca9bd"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/second_numb_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

                <ImageView
                    android:id="@+id/second_imgview"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_error_outline_black_24dp" />

                <TextView
                    android:id="@+id/second_numb_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/third_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="50dp"
            android:text="3"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#f29d02"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/third_numb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Average Heart Rate"
                android:textColor="#9ca9bd"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/third_numb_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

                <ImageView
                    android:id="@+id/third_imgview"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_error_outline_black_24dp" />

                <TextView
                    android:id="@+id/third_numb_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/fourth_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="50dp"
            android:text="4"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#f29d02"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fourth_numb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Average Water Consumed (L)"
                android:textColor="#9ca9bd"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fourth_numb_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

                <ImageView
                    android:id="@+id/fourth_imgview"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_error_outline_black_24dp" />

                <TextView
                    android:id="@+id/fourth_numb_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/fifth_numb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="50dp"
            android:text="5"
            android:padding="20dp"
            android:textStyle="bold"
            android:textColor="#f29d02"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fifth_numb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Average Hours Slept"
                android:textColor="#9ca9bd"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/fifth_numb_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

                <ImageView
                    android:id="@+id/fifth_imgview"
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_error_outline_black_24dp" />

                <TextView
                    android:id="@+id/fifth_numb_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="#9ca9bd"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





</LinearLayout>